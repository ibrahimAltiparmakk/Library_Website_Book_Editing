@model List<KitapTur>


@if (TempData["basarili"] != null)
{
    <h2 style="color:green;font-size:15px" >@TempData["basarili"]</h2>
}
<div class="container">

 <div class="row pt-3 pb-4">
        <h1>Kitap Türleri</h1>
 </div>

   
    <table class="table table-bordered">
   
        <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Kitap Türü
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
        </thead>
        <tbody>
            @foreach(var kitapTuru in Model)// burada yukarıdaki modeldeki verileri döngü ile yazdırıyoruz
            {
                <tr>
                    <td>@kitapTuru.Id</td>
                    <td>@kitapTuru.Ad</td>
                    <td>
                        <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-secondary">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
       
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">Yeni Kitap Türü Ekle</a>
        </div> 
    </div>

</div>
